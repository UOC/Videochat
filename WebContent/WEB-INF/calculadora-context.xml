<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean id="calculadora.context" class="org.red5.server.Context" 
		autowire="byType" />
	
	<bean id="calculadora.scope" class="org.red5.server.WebScope"
		 init-method="register">
		<property name="server" ref="red5.server" />
		<property name="parent" ref="global.scope" />
		<property name="context" ref="calculadora.context" />
		<property name="handler" ref="calculadora.handler" />
		<property name="contextPath" value="/calculadora" />
		<property name="virtualHosts" value="*,localhost, 127.0.0.1" />
	</bean>

	<bean id="calculadora.handler" 
	    class="org.red5.server.webapp.calculadora.Application"
		singleton="true" />

</beans>
